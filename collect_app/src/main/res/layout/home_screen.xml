<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo_hedera"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            app:srcCompat="@drawable/logo_hedera" />

        <TextView
            android:id="@+id/text_hedera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_survey"
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/survey_logo"
            android:contentDescription="TODO" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_survey"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="SurveysIn"
            android:text="@string/main_survey"
            android:textAlignment="gravity"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="OnClick" />
    </LinearLayout>
</LinearLayout>